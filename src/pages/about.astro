---
const team = [
    {
        name: 'John Smith',
        jobTitle: 'Software Engineer',
        description:
            'Experienced software engineer with a passion for developing innovative solutions and optimizing code efficiency.',
        image: 'https://source.unsplash.com/4_QFycgpC4c',
    },
    {
        name: 'Jane Doe',
        jobTitle: 'Marketing Manager',
        description:
            'Creative marketing professional with a track record of successful campaigns and a strong ability to analyze market trends.',
        image: 'https://source.unsplash.com/hglwfa4kj_o',
    },
    {
        name: 'Alex Johnson',
        jobTitle: 'Graphic Designer',
        description:
            'Talented graphic designer specializing in creating visually stunning designs for both print and digital media.',
        image: 'https://source.unsplash.com/sibVwORYqs0',
    },
    {
        name: 'Emily Davis',
        jobTitle: 'Data Scientist',
        description:
            'Data scientist with expertise in machine learning and statistical analysis, dedicated to deriving meaningful insights from complex data sets.',
        image: 'https://source.unsplash.com/WYE2UhXsU1Y',
    },
]

import Layout from '../layouts/Layout.astro'
---

<Layout title="About Us">
    <!-- Hero Section -->
    <section class="overflow-hidden bg-gray-50 sm:grid sm:grid-cols-2">
        <div class="p-8 md:p-12 lg:px-16 lg:py-44">
            <div
                class="mx-auto max-w-xl text-start ltr:sm:text-left rtl:sm:text-right"
            >
                <h2 class="text-2xl font-bold text-gray-900 md:text-3xl">
                    [Business Name] <br /> Your Local Destination for [Key
                    Offerings]
                </h2>

                <p
                    class="hidden text-lg text-gray-500 md:mt-4 md:block md:text-xl"
                >
                    Rooted in [Location], we're [Business Name], your trusted
                    source for [describe key offerings]. With [X years] of
                    dedicated service, we're a [community-driven/your mission]
                    establishment. We take pride in [unique approach] to meet
                    your needs. Join us in [supporting/connecting with] our
                    [Location] community today!
                </p>
            </div>
        </div>

        <img
            alt="Student"
            src="https://source.unsplash.com/5U_28ojjgms"
            class="h-56 w-full object-cover sm:h-full"
        />
    </section>

    <!-- CTA Section-->

    <section class="overflow-hidden">
        <div
            class="mx-auto my-24 w-2/3 text-center text-xl leading-loose sm:my-40 sm:w-4/5 sm:text-justify sm:text-2xl md:text-3xl md:leading-relaxed"
        >
            <p>
                Your website is more than just a collection of pages â€“ it's the
                digital reflection of your identity and purpose. It's time to
                articulate your values, passions, and goals through a compelling
                mission statement. Let your audience connect deeply with what
                drives you.
            </p>
        </div>
    </section>
    <!-- STATS Section -->
    <section class="bg-gray-50 text-gray-500">
        <div class="container mx-auto flex flex-wrap px-16 py-24">
            <div
                class="-mx-4 mb-auto mt-auto flex flex-wrap content-start sm:w-4/5 sm:pr-10 md:w-full lg:w-full"
            >
                <div class="mb-6 w-full px-4 sm:p-4">
                    <h1
                        class="mb-2 text-2xl font-bold text-gray-900 md:text-3xl"
                    >
                        Serving [Location] and Beyond
                    </h1>
                    <p class="text-lg text-gray-500 md:mt-4 md:text-xl">
                        Quantifying Our Impact: A Glimpse into How We're
                        Empowering [Location] and Making a Difference Beyond.
                    </p>
                </div>
                <div class="w-1/2 p-4 lg:w-1/4">
                    <h2 class="text-3xl font-bold text-gray-900">200</h2>
                    <p class="leading-relaxed">Completed Projects</p>
                </div>
                <div class="w-1/2 p-4 lg:w-1/4">
                    <h2 class="text-3xl font-bold text-gray-900">125</h2>
                    <p class="leading-relaxed">Clients</p>
                </div>
                <div class="w-1/2 p-4 lg:w-1/4">
                    <h2 class="text-3xl font-bold text-gray-900">35</h2>
                    <p class="leading-relaxed">Years</p>
                </div>
                <div class="w-1/2 p-4 lg:w-1/4">
                    <h2 class="text-3xl font-bold text-gray-900">4</h2>
                    <p class="leading-relaxed">Services</p>
                </div>
            </div>
        </div>
    </section>

    <!-- TEAM Section -->

    <section class="body-font text-gray-500">
        <div class="container mx-auto px-5 py-24">
            <div class="mb-20 flex w-full flex-col text-center sm:text-start">
                <h1 class="mb-4 text-2xl font-bold text-gray-900 md:text-3xl">
                    Our Team
                </h1>
                <p class="sm:2-/3 text-lg leading-relaxed md:text-xl lg:w-full">
                    Meet the Brilliant People Behind [Business Name]
                </p>
            </div>
            <div class="-m-4 flex flex-wrap">
                {
                    team.map((data) => (
                        <div class="p-4 md:w-1/2 lg:w-1/4">
                            <div class="flex h-full flex-col items-center text-center">
                                <img
                                    alt="team"
                                    class="mb-4 h-56 w-full flex-shrink-0 rounded-lg object-cover object-center"
                                    src={data.image}
                                />
                                <div class="w-full">
                                    <h2 class="text-lg font-bold text-gray-900 md:text-3xl">
                                        {data.name}
                                    </h2>
                                    <h3 class="mb-3 text-gray-500">
                                        {data.jobTitle}
                                    </h3>
                                    <p class="mb-4">{data.description}</p>
                                    <span class="inline-flex">
                                        <a class="text-gray-500">
                                            <svg
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                class="h-5 w-5"
                                                viewBox="0 0 24 24"
                                            >
                                                <path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z" />
                                            </svg>
                                        </a>
                                        <a class="ml-2 text-gray-500">
                                            <svg
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                class="h-5 w-5"
                                                viewBox="0 0 24 24"
                                            >
                                                <path d="M21 11.5a8.38 8.38 0 01-.9 3.8 8.5 8.5 0 01-7.6 4.7 8.38 8.38 0 01-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 01-.9-3.8 8.5 8.5 0 014.7-7.6 8.38 8.38 0 013.8-.9h.5a8.48 8.48 0 018 8v.5z" />
                                            </svg>
                                        </a>
                                    </span>
                                </div>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>
</Layout>
