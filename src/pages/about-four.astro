const testimonials = [
    {
        name: 'Jane Doe',
        testimonial:
            "Absolutely impressed with TailorCraft's work! From fabric selection to fit adjustments, they made my dream suit a reality. The attention to detail and personalized service were exceptional. I received endless compliments at the event. Highly recommended for anyone seeking top-notch craftsmanship.",
