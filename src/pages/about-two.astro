---
import Layout from '../layouts/Layout.astro'
---

<Layout title="About Two">
    <!-- Heading -->
    <section>
        <div class="mx-auto max-w-screen-xl px-4 py-8 sm:px-6 sm:py-12 lg:px-8">
            <div
                class="items-center sm:flex sm:items-center sm:justify-between"
            >
                <div class="text-center sm:text-left">
                    <h1
                        class="text-base font-bold text-gray-900 sm:text-base md:text-lg"
                    >
                        About Me
                    </h1>
                    <div
                        class="mt-2 flex flex-row justify-center space-x-4 text-lg text-gray-500 sm:space-x-8 sm:text-lg md:text-xl lg:text-2xl"
                    >
                        <p>Creator</p>
                        <p>Artist</p>
                        <p>Designer</p>
                    </div>
                </div>

                <div
                    class="mt-4 hidden gap-4 sm:mr-4 sm:mt-0 sm:flex sm:w-5 sm:flex-row sm:items-center"
                >
                    <input type="image" src="instagram.svg" alt="Instragram" />
                    <input type="image" src="tiktok.svg" alt="Tik Tok" />
                </div>
            </div>
        </div>
    </section>
    <section>
        <div class="3xl:pb-44 relative isolate px-6 pb-32 pt-14 md:pb-12">
            <div
                class="= absolute inset-x-0 top-0 -z-10 transform-gpu overflow-hidden sm:inset-x-4"
                aria-hidden="true"
            >
                <div
                    class="bg-image 3xl:h-[720px] h-[500px] bg-cover bg-center"
                    style="background-image: url('https://source.unsplash.com/yXDmgBEvz78');"
                >
                    <!-- Content over the image goes here -->
                </div>
            </div>
            <div class="mx-auto max-w-2xl py-32 sm:py-48 lg:py-56"></div>
        </div>
    </section>
    <!-- Gallery -->
    <section class="body-font text-gray-600">
        <div class="container mx-auto flex flex-wrap px-5 py-24">
            <div class="mb-20 flex w-full flex-wrap">
                <h1
                    class="title-font mb-4 text-2xl font-medium text-gray-900 sm:text-3xl lg:mb-0 lg:w-1/3"
                >
                    Journey Through Frames: Discover My Gallery
                </h1>
                <p class="mx-auto text-base leading-relaxed lg:w-2/3 lg:pl-6">
                    Embark on an Enchanting Visual Odyssey: Delve into the Heart
                    of Our Gallery. Each Image is a Tale Waiting to Unfold, a
                    Glimpse into the Moments That Define Us and the Stories That
                    Weave our Journey.
                </p>
            </div>
            <div class="grid grid-cols-1 gap-2 md:grid-cols-2 md:gap-4">
                <div class="flex flex-wrap">
                    <div class="w-full p-1 md:p-2">
                        <img
                            alt="gallery"
                            class="block h-full w-full object-cover object-center"
                            src="https://dummyimage.com/500x300"
                        />
                    </div>
                    <div class="w-1/2 p-1 md:p-2">
                        <img
                            alt="gallery"
                            class="block h-full w-full object-cover object-center"
                            src="https://dummyimage.com/501x301"
                        />
                    </div>
                    <div class="w-1/2 p-1 md:p-2">
                        <img
                            alt="gallery"
                            class="block h-full w-full object-cover object-center"
                            src="https://dummyimage.com/600x360"
                        />
                    </div>
                </div>
                <div class="flex flex-wrap">
                    <div class="w-1/2 p-1 md:p-2">
                        <img
                            alt="gallery"
                            class="block h-full w-full object-cover object-center"
                            src="https://dummyimage.com/601x361"
                        />
                    </div>
                    <div class="w-1/2 p-1 md:p-2">
                        <img
                            alt="gallery"
                            class="block h-full w-full object-cover object-center"
                            src="https://dummyimage.com/502x302"
                        />
                    </div>
                    <div class="w-full p-1 md:p-2">
                        <img
                            alt="gallery"
                            class="block h-full w-full object-cover object-center"
                            src="https://dummyimage.com/500x300"
                        />
                    </div>
                </div>
            </div>
        </div>
    </section>
</Layout>
