---
import Layout from '../layouts/Layout.astro'
import { PricingCardComponent } from '../components/PricingCardComponent';

const pricingCards = [
  {
    title: "Basic Wash",
    price: "$10",
    description: [
      "Exterior wash",
      "Hand drying",
      "Tire cleaning",
      "Window cleaning"
    ]
  },
  {
    title: "Standard Wash",
    price: "$20",
    description: [
      "Basic wash services",
      "Interior vacuuming",
      "Dashboard cleaning",
      "Undercarriage rinse"
    ]
  },
  {
    title: "Deluxe Wash",
    price: "$30",
    description: [
      "Standard wash services",
      "Triple foam wax",
      "Wheel and rim detailing",
      "Air freshener"
    ]
  },
  {
    title: "Premium Wash",
    price: "$40",
    description: [
      "Deluxe wash services",
      "Full interior detailing",
      "Clay bar treatment",
      "Rain repellent application"
    ]
  }
];


---
<Layout title="About Us">
<!-- CTA SECTION -->
    <section class="text-gray-600 body-font">
  <div class="container px-5 py-24 mx-auto flex items-center md:flex-row flex-col">
    <div class="flex flex-col md:pr-10 md:mb-0 mb-6 pr-0 w-full md:w-auto md:text-left text-center">
      <h1 class="text-xs text-gray-500 tracking-widest font-medium title-font mb-1 uppercase">Select your service</h1>
      <h2 class="md:text-3xl text-2xl font-medium title-font text-gray-900 capitalize">Price plan for everyone</h2>
    </div>
  </div>
</section>
<!-- PRICING PLAN SECTION -->
<section>
    <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-4 gap-4 justify-evenly pb-12">

    {pricingCards.map( data => (
        <PricingCardComponent client:idle  title={data.title} price={data.price} description={data.description}/>
    ))}

    </div>
</section>
<!-- CUSTOM ORDER -->
<section class="text-gray-600 body-font bg-gradient-to-tr from-gray-50 to-sky-200">
  <div class="container px-5 py-24 mx-auto flex flex-wrap items-center">
    <div class="lg:w-3/5 md:w-1/2 md:pr-16 lg:pr-0 pr-0">
      <h1 class="title-font font-medium text-3xl text-gray-900">Always at your service</h1>
      <p class="leading-relaxed mt-4">Need something more custom? We're here to help you!</p>
    </div>
    <div class="lg:w-2/6 md:w-1/2 bg-gray-100 rounded-lg p-8 flex flex-col md:ml-auto w-full mt-10 md:mt-0">
      <h2 class="text-gray-900 text-lg font-medium title-font mb-5 capitalize">Get in touch with our sales team</h2>
      <div class="relative mb-4">
        <label for="email" class="leading-7 text-sm text-gray-600">Email</label>
        <input type="email" id="email" name="email" class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
      </div>
      <div class="relative mb-4">
        <label for="message" class="leading-7 text-sm text-gray-600">Message</label>
        <textarea id="message" name="message" class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 h-32 text-base outline-none text-gray-700 py-1 px-3 resize-none leading-6 transition-colors duration-200 ease-in-out"></textarea>
      </div>
      <button class="text-white bg-indigo-500 border-0 py-2 px-8 focus:outline-none hover:bg-indigo-600 rounded text-lg">Contact Us</button>
      <p class="text-xs text-gray-500 mt-3">Literally you probably haven't heard of them jean shorts.</p>
    </div>
  </div>
</section>

<!-- FAQ -->
    <section class="overflow-hidden pt-20 pb-20  text-lg md:text-xl">
        <h1 class="pl-2 mb-4 text-2xl font-bold text-gray-900 md:text-3xl">
                    FAQs
                </h1>
<div class="space-y-4">
